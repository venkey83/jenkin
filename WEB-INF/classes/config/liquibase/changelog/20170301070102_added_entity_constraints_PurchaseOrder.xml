<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <!--
        Added the constraints for entity PurchaseOrder.
    -->
    <changeSet id="20170301070102-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="process_order_id"
                                 baseTableName="purchase_order"
                                 constraintName="fk_purchase_order_process_order_id"
                                 referencedColumnNames="id"
                                 referencedTableName="process_order"/>

    </changeSet>
    <changeSet id="20170301070102-3" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="invoice_id"
                                 baseTableName="purchase_order"
                                 constraintName="fk_purchase_order_invoice_id"
                                 referencedColumnNames="id"
                                 referencedTableName="invoice"/>

    </changeSet>
    <changeSet id="20170301070102-4" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="goods_return_notice_id"
                                 baseTableName="purchase_order"
                                 constraintName="fk_goods_return_notice_id"
                                 referencedColumnNames="id"
                                 referencedTableName="goods_return_notice"/>

    </changeSet>
    <changeSet id="20170301070102-5" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="ad_hoc_credit_notes_id"
                                 baseTableName="purchase_order"
                                 constraintName="fk_ad_hoc_credit_notes_id"
                                 referencedColumnNames="id"
                                 referencedTableName="ad_hoc_credit_notes"/>

    </changeSet>
    <changeSet id="20170301070102-6" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="purchase_order_sequence_id"
                                 baseTableName="purchase_order"
                                 constraintName="fk_purchase_order_sequence_id"
                                 referencedColumnNames="id"
                                 referencedTableName="purchase_order_sequence"/>

    </changeSet>
    <changeSet id="20170301070102-7" author="jhipster">
    <addForeignKeyConstraint baseColumnNames="gr_buyer_user_id"
                             baseTableName="purchase_order"
                             constraintName="fk_gr_buyer_user_id"
                             referencedColumnNames="id"
                             referencedTableName="buyer_user"/>
    </changeSet>
    <changeSet id="20170301070102-8" author="jhipster">
        <addForeignKeyConstraint baseColumnNames="geo_export_buyer_user_id"
                                 baseTableName="purchase_order"
                                 constraintName="fk_geo_export_buyer_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="buyer_user"/>
    </changeSet>
    <changeSet author="liquibase-docs" id="20170301070102-9">
        <addUniqueConstraint columnNames="process_order_id"
                             constraintName="unique_process_orders"
                             deferrable="false"
                             disabled="false"
                             initiallyDeferred="false"
                             tableName="purchase_order"/>
    </changeSet>
</databaseChangeLog>
