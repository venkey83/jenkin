<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity EAuthorizationRequest.
    -->
    <changeSet id="20180917050151-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="approver_id"
                                 baseTableName="eauthorization_request"
                                 constraintName="fk_eauthorization_request_approver_id"
                                 referencedColumnNames="id"
                                 referencedTableName="buyer_user"/>

        <addForeignKeyConstraint baseColumnNames="requester_id"
                                 baseTableName="eauthorization_request"
                                 constraintName="fk_eauthorization_request_requester_id"
                                 referencedColumnNames="id"
                                 referencedTableName="supplier_user"/>

        <addForeignKeyConstraint baseColumnNames="brand_supplier_payment_model_mapping_id"
                                 baseTableName="eauthorization_request"
                                 constraintName="eauthorization_request_brand_supplier_payment_model_m_id"
                                 referencedColumnNames="id"
                                 referencedTableName="brand_supplier_payment_model_mapping"/>

        <addForeignKeyConstraint baseColumnNames="previous_model_id"
                                 baseTableName="eauthorization_request"
                                 constraintName="fk_eauthorization_request_previous_model_id"
                                 referencedColumnNames="id"
                                 referencedTableName="brand_supplier_payment_model_mapping"/>
        <addForeignKeyConstraint baseColumnNames="brand_id"
                                 baseTableName="eauthorization_request"
                                 constraintName="fk_eauthorization_request_brand_id"
                                 referencedColumnNames="id"
                                 referencedTableName="brand"/>

    </changeSet>
    <changeSet id="20181002020651-2" author="jhipster">
        <dropForeignKeyConstraint baseTableName="eauthorization_request" constraintName="eauthorization_request_brand_supplier_payment_model_m_id"/>

        <dropUniqueConstraint constraintName="brand_supplier_payment_model_mapping_id"
                              tableName="eauthorization_request"/>

        <addForeignKeyConstraint baseColumnNames="brand_supplier_payment_model_mapping_id"
                                 baseTableName="eauthorization_request"
                                 constraintName="eauthorization_request_brand_supplier_payment_model_m_id"
                                 referencedColumnNames="id"
                                 referencedTableName="brand_supplier_payment_model_mapping"/>
    </changeSet>

    <changeSet id="20181003020651-2" author="jhipster">

    <addForeignKeyConstraint baseColumnNames="reverter_id"
                             baseTableName="eauthorization_request"
                             constraintName="fk_eauthorization_reverter_id"
                             referencedColumnNames="id"
                             referencedTableName="buyer_user"/>
    </changeSet>
</databaseChangeLog>
