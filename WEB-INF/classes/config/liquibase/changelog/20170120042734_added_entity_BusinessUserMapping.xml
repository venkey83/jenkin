<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity BusinessUserMapping.
    -->
    <changeSet id="20170120042734-1" author="jhipster">
        <createTable tableName="business_user_mapping">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created_date" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="modified_date" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="deleted" type="bit">
                <constraints nullable="true" />
            </column>

            <column name="user_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="buyer_business_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="business_user_mapping" columnName="created_date" columnDataType="datetime"/>
        <dropDefaultValue tableName="business_user_mapping" columnName="modified_date" columnDataType="datetime"/>

    </changeSet>
    <changeSet author="jhipster" id="20170120042734-2">
        <addColumn
            tableName="business_user_mapping">
            <column name="approval_level" type="int"/>
        </addColumn>
        <addColumn
            tableName="business_user_mapping">
            <column name="maximum_amount" type="double"/>
        </addColumn>
        <addColumn
            tableName="business_user_mapping">
            <column name="minimum_amount" type="double"/>
        </addColumn>
        <addColumn
            tableName="business_user_mapping">
            <column name="is_last_level" type="bit" defaultValueComputed="false"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>
