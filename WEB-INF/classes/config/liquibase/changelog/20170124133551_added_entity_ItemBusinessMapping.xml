<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity ItemBusinessMapping.
    -->
    <changeSet id="20170124133551-1" author="jhipster">
        <createTable tableName="item_business_mapping">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="deleted" type="bit">
                <constraints nullable="true" />
            </column>

            <column name="created_date" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="modified_date" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="items_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="buyer_business_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="item_business_mapping" columnName="created_date" columnDataType="datetime"/>
        <dropDefaultValue tableName="item_business_mapping" columnName="modified_date" columnDataType="datetime"/>

    </changeSet>

    <changeSet author="jhipster" id="20170124133551-2">
        <addColumn
            tableName="item_business_mapping">
            <column name="status" type="varchar(255)"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20170124133551-3">
        <modifyDataType
            columnName="status"
            newDataType="bit"
            tableName="item_business_mapping"/>
    </changeSet>
    <changeSet author="jhipster" id="20170124133551-4">
        <addColumn
            tableName="item_business_mapping">
            <column name="disable" type="bit"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20170124133551-6">
        <addColumn
            tableName="item_business_mapping">
            <column name="supplier_id" type="bigint"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20170124133551-7">
        <addColumn
            tableName="item_business_mapping">
            <column name="purchase_request_approval_status" type="varchar(255)"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20170124133551-8">
        <dropColumn
            columnName="status"
            tableName="item_business_mapping"/>
        <dropColumn
            columnName="disable"
            tableName="item_business_mapping"/>
    </changeSet>
    <changeSet author="jhipster" id="20181102151200-8">
        <addColumn
            tableName="item_business_mapping">
            <column name="approver_id" type="bigint">
                <constraints nullable="true" />
            </column>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20200205152033-9" failOnError="false">
        <addColumn
            tableName="item_business_mapping">
            <column name="buyer_limited" type="bit"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20200205152033-10" failOnError="false">
        <addColumn
            tableName="item_business_mapping">
            <column name="maximum_allocation" type="double"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20200205152033-11" failOnError="false">
        <addColumn
            tableName="item_business_mapping">
            <column name="price" type="double"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20200305105805-12" failOnError="false">
        <addColumn tableName="item_business_mapping">
            <column name="multiplier_factor" type="${floatType}" defaultValueComputed="null"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20200305105805-13" failOnError="false">
        <addColumn tableName="item_business_mapping">
            <column name="moq" type="${floatType}" defaultValueComputed="null"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>
