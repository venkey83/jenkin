    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <!--
        Added the constraints for entity PriceUpdates.
    -->
    <changeSet id="20170310123140-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="items_id"
                                 baseTableName="price_updates"
                                 constraintName="fk_price_updates_items_id"
