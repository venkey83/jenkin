<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity ItemApprovalRequest.
    -->
    <changeSet id="20170216131712-1" author="jhipster">
        <createTable tableName="item_approval_request">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="approval_request_number" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="quantity" type="${floatType}">
                <constraints nullable="true" />
            </column>

            <column name="delivery_date" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="special_request" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="approval_status" type="bit">
                <constraints nullable="true" />
            </column>

            <column name="created_date" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="modified_date" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="buyer_user_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="items_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="buyer_business_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="approval_needed_from_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="item_approval_request" columnName="delivery_date" columnDataType="datetime"/>
        <dropDefaultValue tableName="item_approval_request" columnName="created_date" columnDataType="datetime"/>
        <dropDefaultValue tableName="item_approval_request" columnName="modified_date" columnDataType="datetime"/>

    </changeSet>
    <changeSet author="jhipster" id="20170216131712-2">
        <modifyDataType
                columnName="approval_status"
                newDataType="varchar(255)"
                tableName="item_approval_request"/>
    </changeSet>
    <changeSet author="jhipster" id="20170216131712-3">
        <addColumn
            tableName="item_approval_request">
            <column name="deleted" type="bit"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20170216131712-4">
        <addColumn
            tableName="item_approval_request">
            <column name="price" type="double"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20170216131712-5">
        <addColumn
            tableName="item_approval_request">
            <column name="gl_code_mappings_id" type="bigint"/>
        </addColumn>
    </changeSet>
    <changeSet author="Ezyprocure" id="20170216131712-6">
        <addColumn
            tableName="item_approval_request">
            <column name="is_free_item" type="bit"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20170216131712-7">
        <addColumn
            tableName="item_approval_request">
            <column name="approval_level" type="bigint"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20170216131712-8">
        <addColumn
            tableName="item_approval_request">
            <column name="approval_flag" type="bit"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20170216131712-9">
        <addColumn
            tableName="item_approval_request">
            <column name="level" type="bigint"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20170216131712-10">
        <modifyDataType
            columnName="level"
            newDataType="tinyint"
            tableName="item_approval_request"/>
    </changeSet>
    <changeSet author="jhipster" id="20170216131712-11">
        <addColumn
            tableName="item_approval_request">
            <column name="adhoc_status" type="varchar(255)"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20170216131712-13">
        <addColumn
            tableName="item_approval_request">
            <column name="supplier_id" type="bigint"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20181228141712-14">
        <addColumn
            tableName="item_approval_request">
            <column name="pr_remark" type="varchar(255)"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20190101141712-15">
        <addColumn
            tableName="item_approval_request">
            <column name="delete_token" type="varchar(255)"/>
        </addColumn>
    </changeSet>
    
    <changeSet id="20200814153800-16" author="sgebiz">
        <sql>
            CREATE INDEX idx_item_approval_request_no_status ON item_approval_request (approval_request_number, approval_status)
        </sql>
    </changeSet>
</databaseChangeLog>
