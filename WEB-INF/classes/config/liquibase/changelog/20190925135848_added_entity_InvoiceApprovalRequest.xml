<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity ItemApprovalRequest.
    -->
    <changeSet id="20190925135848-1" author="jhipster">
        <createTable tableName="invoice_approval_request">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="approval_request_number" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="invoice_id" type="bigint">
                <constraints nullable="false" />
            </column>

            <column name="approval_status" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="created_date" type="timestamp">
                <constraints nullable="false" />
            </column>

            <column name="created_by_id" type="bigint">
                <constraints nullable="false" />
            </column>

            <column name="approval_needed_from_id" type="bigint">
                <constraints nullable="false" />
            </column>

            <column name="supplier_id" type="bigint">
                <constraints nullable="false" />
            </column>

            <column name="modified_by_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="modified_date" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="deletion_token" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="invoice_approval_request" columnName="created_date" columnDataType="datetime"/>
        <dropDefaultValue tableName="invoice_approval_request" columnName="modified_date" columnDataType="datetime"/>

    </changeSet>

    <changeSet id="201910171844-2" author="jhipster">
        <addColumn tableName="invoice_approval_request">
            <column name="remarks" type="varchar(255)">
                <constraints nullable="true" />
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>
