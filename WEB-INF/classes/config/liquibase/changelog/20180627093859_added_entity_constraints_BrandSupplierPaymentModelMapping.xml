<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <!--
        Added the constraints for entity BrandSupplierPaymentModelMapping.
    -->
    <changeSet id="20180627093859-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="brand_id"
                                 baseTableName="brand_supplier_payment_model_mapping"
                                 constraintName="fk_brand_supplier_payment_model_mapping_brand_id"
                                 referencedColumnNames="id"
                                 referencedTableName="brand"/>

        <addForeignKeyConstraint baseColumnNames="supplier_id"
                                 baseTableName="brand_supplier_payment_model_mapping"
                                 constraintName="fk_brand_supplier_payment_model_mapping_supplier_id"
                                 referencedColumnNames="id"
                                 referencedTableName="supplier"/>

        <addForeignKeyConstraint baseColumnNames="updated_by_id"
                                 baseTableName="brand_supplier_payment_model_mapping"
                                 constraintName="fk_brand_supplier_payment_model_mapping_updated_by_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user"/>

    </changeSet>
    <changeSet id="20180627093859-3" author="jhipster">
        <addForeignKeyConstraint baseColumnNames="epd_approval_request_id"
                                 baseTableName="brand_supplier_payment_model_mapping"
                                 constraintName="fk_epd_approval_request_id"
                                 referencedColumnNames="id"
                                 referencedTableName="epd_approval_request"/>
    </changeSet>

    <changeSet id="20180627093859-4" author="jhipster">
    <addUniqueConstraint columnNames="brand_id, supplier_id,deletion_token"
                         constraintName="brand_supplier_payment_model_mapping_constraint"
                         deferrable="false"
                         disabled="false"
                         initiallyDeferred="false"
                         tableName="brand_supplier_payment_model_mapping"/>
    </changeSet>
</databaseChangeLog>
