<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity InvoiceExport.
    -->
    <changeSet id="20190115071012-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="invoice_id"
                                 baseTableName="invoice_export"
                                 constraintName="fk_invoice_export_invoice_id"
                                 referencedColumnNames="id"
                                 referencedTableName="invoice"/>

        <addForeignKeyConstraint baseColumnNames="exported_by_id"
                                 baseTableName="invoice_export"
                                 constraintName="fk_invoice_export_exported_by_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user"/>

    </changeSet>

    <changeSet id="20190115183800-5" author="jhipster">
        <addUniqueConstraint tableName="invoice_export"
                             columnNames="invoice_id,export_type"
                             constraintName="uk_invoice_export_type"
                             initiallyDeferred="false"/>
    </changeSet>
</databaseChangeLog>
