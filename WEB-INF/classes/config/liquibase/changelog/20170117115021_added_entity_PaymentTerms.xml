<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity PaymentTerms.
    -->
    <changeSet id="20170117115021-1" author="jhipster">
        <createTable tableName="payment_terms">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="payment_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="account_name" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="account_number" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="account_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="account_bank" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="supplier_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>

    </changeSet>
    <changeSet author="jhipster" id="20170117115021-2">
        <addColumn
            tableName="payment_terms">
            <column name="bank_name" type="varchar(255)"/>
        </addColumn>
        <addColumn
            tableName="payment_terms">
            <column name="bank_code" type="varchar(255)"/>
        </addColumn>
        <addColumn
            tableName="payment_terms">
            <column name="branch_code" type="varchar(255)"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20170117115021-3">
    <addColumn
        tableName="payment_terms">
        <column name="description" type="varchar(255)"/>
    </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20170117115021-4">
        <addColumn
            tableName="payment_terms">
            <column name="is_active" type="bit"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20180727150021-5">
        <addColumn
            tableName="payment_terms">
            <column name="bank_id" type="bigint" >
                <constraints nullable="true"/></column>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20180727150021-6">
        <addColumn tableName="payment_terms">
            <column beforeColumn="account_bank" afterColumn="supplier_id" name="brand_id" type="bigint"/>
        </addColumn>
        <addColumn tableName="payment_terms">
            <column beforeColumn="is_active" afterColumn="bank_id" name="is_default" type="bit"/>
        </addColumn>
        <addForeignKeyConstraint baseColumnNames="brand_id"
                                     baseTableName="payment_terms"
                                     constraintName="fk_payment_terms_brand_id"
                                     referencedColumnNames="id"
                                     referencedTableName="brand"/>
    </changeSet>
</databaseChangeLog>
