<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <!--
        Added the constraints for entity ItemBuyerMapping.
    -->
    <changeSet id="20170124133333-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="items_id"
                                 baseTableName="item_buyer_mapping"
                                 constraintName="fk_item_buyer_mapping_items_id"
                                 referencedColumnNames="id"
                                 referencedTableName="items"/>

        <addForeignKeyConstraint baseColumnNames="buyer_id"
                                 baseTableName="item_buyer_mapping"
                                 constraintName="fk_item_buyer_mapping_buyer_id"
                                 referencedColumnNames="id"
                                 referencedTableName="buyer"/>

    </changeSet>
    <changeSet id="20170124133333-3" author="jhipster">

    <addForeignKeyConstraint baseColumnNames="buyer_item_group_id"
                             baseTableName="item_buyer_mapping"
                             constraintName="fk_item_buyer_mapping_buyer_item_group_id"
                             referencedColumnNames="id"
                             referencedTableName="item_group"/>
    </changeSet>
</databaseChangeLog>
