<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity OrderTemplate.
    -->
    <changeSet id="20181129055037-2" author="jhipster">
        <comment>Foreign Keys For Order Template</comment>
        <addForeignKeyConstraint baseColumnNames="created_by_id"
                                 baseTableName="order_template"
                                 constraintName="fk_order_template_created_by_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user"/>

        <addForeignKeyConstraint baseColumnNames="modified_by_id"
                                 baseTableName="order_template"
                                 constraintName="fk_order_template_modified_by_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user"/>

        <addForeignKeyConstraint baseColumnNames="company_id"
                                 baseTableName="order_template"
                                 constraintName="fk_order_template_company_id"
                                 referencedColumnNames="id"
                                 referencedTableName="buyer"/>

    </changeSet>

    <changeSet id="20181129055037-3" author="jhipster">
        <comment>Unique Constraints template_name_per_buyer_company</comment>
        <addUniqueConstraint columnNames="name, company_id, deleted"
                             constraintName="template_name_per_buyer_company"
                             deferrable="false"
                             disabled="false"
                             initiallyDeferred="false"
                             tableName="order_template"/>
    </changeSet>

    <changeSet id="20181210185219-4" author="Ezyprocure">
        <comment>Foreign Keys For Purchase Order Type</comment>
        <addForeignKeyConstraint baseColumnNames="purchase_order_type_id"
                                 baseTableName="order_template"
                                 constraintName="fk_order_template_purchase_order_type_id"
                                 referencedColumnNames="id"
                                 referencedTableName="purchase_order_types"/>
    </changeSet>

    <changeSet id="20181210185219-5" author="Ezyprocure">
        <comment>Foreign Keys For Business Outlet</comment>
        <addForeignKeyConstraint baseColumnNames="buyer_business_id"
                                 baseTableName="order_template"
                                 constraintName="fk_order_template_buyer_business_id"
                                 referencedColumnNames="id"
                                 referencedTableName="buyer_business"/>
    </changeSet>

</databaseChangeLog>
