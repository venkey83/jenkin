<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <!--
        Added the constraints for entity EpdApprovalRequest.
    -->
    <changeSet id="20180704083718-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="brand_id"
                                 baseTableName="epd_approval_request"
                                 constraintName="fk_epd_approval_request_brand_id"
                                 referencedColumnNames="id"
                                 referencedTableName="brand"/>

        <addForeignKeyConstraint baseColumnNames="supplier_id"
                                 baseTableName="epd_approval_request"
                                 constraintName="fk_epd_approval_request_supplier_id"
                                 referencedColumnNames="id"
                                 referencedTableName="supplier"/>

        <addForeignKeyConstraint baseColumnNames="requested_supplier_user_id"
                                 baseTableName="epd_approval_request"
                                 constraintName="fk_epd_approval_request_requested_supplier_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="supplier_user"/>

        <addForeignKeyConstraint baseColumnNames="accepted_buyer_user_id"
                                 baseTableName="epd_approval_request"
                                 constraintName="fk_epd_approval_request_accepted_buyer_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="buyer_user"/>

        <addUniqueConstraint columnNames="brand_id, supplier_id,deletion_token,epd_approval_status"
                             constraintName="buyer_brand_epd_constraint"
                             deferrable="false"
                             disabled="false"
                             initiallyDeferred="false"
                             tableName="epd_approval_request"/>

    </changeSet>
    <changeSet author="ezyprocure" id="20180704083718-3">
        <dropNotNullConstraint
            columnDataType="bigint"
            columnName="accepted_buyer_user_id"
            tableName="epd_approval_request"/>
    </changeSet>
</databaseChangeLog>
