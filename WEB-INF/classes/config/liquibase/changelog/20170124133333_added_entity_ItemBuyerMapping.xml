        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20201014130600-11">
        <addColumn
            tableName="item_buyer_mapping">
            <column name="sub_category_id" type="bigint"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20201014130600-12">
        <addColumn
            tableName="item_buyer_mapping">
            <column name="batch_management" type="varchar(255)"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20201014130600-13">
        <addColumn
            tableName="item_buyer_mapping">
            <column name="reorder_qty" type="bigint"/>
        </addColumn>
    </changeSet>
