<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity BuyerDeliveryConditions.
    -->
    <changeSet id="20190528135848-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="delivery_conditions_id"
                                 baseTableName="buyer_delivery_conditions"
                                 constraintName="fk_buyer_delivery_conditions_delivery_conditions_id"
                                 referencedColumnNames="id"
                                 referencedTableName="delivery_conditions"/>

        <addForeignKeyConstraint baseColumnNames="created_by_id"
                                 baseTableName="buyer_delivery_conditions"
                                 constraintName="fk_buyer_delivery_conditions_created_by_id"
                                 referencedColumnNames="id"
                                 referencedTableName="supplier_user"/>

        <addForeignKeyConstraint baseColumnNames="buyer_outlet_id"
                                 baseTableName="buyer_delivery_conditions"
                                 constraintName="fk_buyer_delivery_conditions_buyer_outlet_id"
                                 referencedColumnNames="id"
                                 referencedTableName="buyer_business"/>

    </changeSet>
    <changeSet id="20190603122048-3" author="jhipster">
        <comment> Unique Constraints Only one delivery condition for an outlet</comment>

        <addUniqueConstraint columnNames="buyer_outlet_id, delivery_conditions_id, deletion_token"
                             constraintName="one_delivery_condition_per_outlet"
                             deferrable="false"
                             disabled="false"
                             initiallyDeferred="false"
                             tableName="buyer_delivery_conditions"/>
    </changeSet>

    <changeSet id="20190628152048-3" author="jhipster">
        <comment> refactor Constraints</comment>

        <dropForeignKeyConstraint baseTableName="buyer_delivery_conditions" constraintName="fk_buyer_delivery_conditions_created_by_id"/>

        <addForeignKeyConstraint baseColumnNames="created_by_id"
                                 baseTableName="buyer_delivery_conditions"
                                 constraintName="fk_buyer_delivery_conditions_created_by_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user"/>

        <addForeignKeyConstraint baseColumnNames="supplier_id"
                                 baseTableName="buyer_delivery_conditions"
                                 constraintName="fk_buyer_delivery_conditions_supplier_id"
                                 referencedColumnNames="id"
                                 referencedTableName="supplier"/>

        <addUniqueConstraint columnNames="buyer_outlet_id, supplier_id, deletion_token"
                             constraintName="one_delivery_condition_per_supplier_outlet"
                             deferrable="false"
                             disabled="false"
                             initiallyDeferred="false"
                             tableName="buyer_delivery_conditions"/>
    </changeSet>
</databaseChangeLog>
