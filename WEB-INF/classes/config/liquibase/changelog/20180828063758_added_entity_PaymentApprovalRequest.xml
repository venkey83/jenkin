<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity PaymentApprovalRequest.
    -->
    <changeSet id="20180828063758-1" author="jhipster">
        <createTable tableName="payment_approval_request">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created_date" type="timestamp">
                <constraints nullable="false" />
            </column>

            <column name="modified_date" type="timestamp">
                <constraints nullable="false" />
            </column>

            <column name="deletion_token" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="payment_approval_status" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="payment_approval_sequence" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="payment_approval_sequence_no_id" type="bigint">
                <constraints nullable="false" />
            </column>

            <column name="approval_needed_from_id" type="bigint">
                <constraints nullable="false" />
            </column>

            <column name="payment_id" type="bigint">
                <constraints nullable="false" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="payment_approval_request" columnName="created_date" columnDataType="datetime"/>
        <dropDefaultValue tableName="payment_approval_request" columnName="modified_date" columnDataType="datetime"/>

    </changeSet>
    <changeSet author="jhipster" id="20180828063758-2">
        <addColumn tableName="payment_approval_request">
            <column name="buyer_user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20180828063758-3">
        <renameColumn
            columnDataType="varchar(255)"
            newColumnName="payment_approval_request_number"
            oldColumnName="payment_approval_sequence"
            tableName="payment_approval_request"/>
    </changeSet>
    <changeSet author="jhipster" id="20180828063758-4">
        <addColumn tableName="payment_approval_request">
            <column name="payment_type" type="varchar(255)" defaultValueComputed="'INTERNAL'">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20200213110558-5">
        <addColumn
            tableName="payment_approval_request">
            <column beforeColumn="approval_level" afterColumn="payment_type" name="approval_group" type="varchar(25)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20200213110558-6">
        <addColumn
            tableName="payment_approval_request">
            <column beforeColumn="approval_level" afterColumn="payment_type" name="approval_required" type="integer">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
