<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity BuyerDeliveryConditions.
    -->
    <changeSet id="20190925135848-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="created_by_id"
                                 baseTableName="invoice_approval_request"
                                 constraintName="fk_invoice_approval_request_created_by_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user"/>

        <addForeignKeyConstraint baseColumnNames="modified_by_id"
                                 baseTableName="invoice_approval_request"
                                 constraintName="fk_invoice_approval_request_modified_by_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user"/>

        <addForeignKeyConstraint baseColumnNames="supplier_id"
                                 baseTableName="invoice_approval_request"
                                 constraintName="fk_invoice_approval_request_supplier_id"
                                 referencedColumnNames="id"
                                 referencedTableName="supplier"/>

        <addForeignKeyConstraint baseColumnNames="invoice_id"
                                 baseTableName="invoice_approval_request"
                                 constraintName="fk_invoice_approval_request_invoice_id"
                                 referencedColumnNames="id"
                                 referencedTableName="invoice"/>

        <addForeignKeyConstraint baseColumnNames="approval_needed_from_id"
                                 baseTableName="invoice_approval_request"
                                 constraintName="fk_invoice_approval_request_approval_needed_from_id"
                                 referencedColumnNames="id"
                                 referencedTableName="buyer"/>
        <comment> Unique Constraints Only one request is active</comment>
        <addUniqueConstraint columnNames="approval_needed_from_id, invoice_id, deletion_token"
                             constraintName="only_one_active_request_buyer"
                             deferrable="false"
                             disabled="false"
                             initiallyDeferred="false"
                             tableName="invoice_approval_request"/>
        <addUniqueConstraint columnNames="supplier_id, invoice_id, deletion_token"
                             constraintName="only_one_active_request_supplier"
                             deferrable="false"
                             disabled="false"
                             initiallyDeferred="false"
                             tableName="invoice_approval_request"/>
    </changeSet>
</databaseChangeLog>
