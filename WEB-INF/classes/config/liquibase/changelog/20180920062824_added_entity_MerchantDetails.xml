<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity MerchantDetails.
    -->
    <changeSet id="20180920062824-1" author="jhipster">
        <createTable tableName="merchant_details">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="merchant_id" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="user_id" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="password" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="requested_url" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="gate_way_type" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="created_date" type="timestamp">
                <constraints nullable="false" />
            </column>

            <column name="modified_date" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="deletion_token" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="brand_id" type="bigint">
                <constraints nullable="false" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="merchant_details" columnName="created_date" columnDataType="datetime"/>
        <dropDefaultValue tableName="merchant_details" columnName="modified_date" columnDataType="datetime"/>

    </changeSet>
    <changeSet author="jhipster" id="20180920062824-4">
                <addColumn tableName="merchant_details">
                    <column name="country_currency_id" type="bigint"/>
                </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20190724062824-5">
        <addColumn tableName="merchant_details">
            <column name="supplier_id" type="bigint">
            <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20190724062824-6">
        <addColumn tableName="merchant_details">
            <column name="business_service_rate" type="${floatType}">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20190724062824-8">
          <dropNotNullConstraint tableName="merchant_details" columnName="brand_id" columnDataType="bigint"></dropNotNullConstraint>
    </changeSet>
    <changeSet id="20190724062824-9" author="jhipster">
        <addForeignKeyConstraint baseColumnNames="supplier_id"
                                 baseTableName="merchant_details"
                                 constraintName="fk_merchant_details_supplier_id"
                                 referencedColumnNames="id"
                                 referencedTableName="supplier"/>
    </changeSet>

</databaseChangeLog>
