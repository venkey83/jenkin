<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
    <!--
        Added the entity SSO_USER_MAPPING.
    -->
    <changeSet id="20200921130321-1" author="jhipster">
        <createTable tableName="sso_user_mapping">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="reference_id" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="uen" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="tinyint(4)">
                <constraints nullable="false"/>
            </column>
            <column name="integration_app_code" type="int(11)">
                <constraints nullable="false"/>
            </column>
            <column name="app_type" type="int(11)">
                <constraints nullable="false"/>
            </column>
            <column name="failed_login_attempts" type="int(11)">
                <constraints nullable="true"/>
            </column>
         </createTable>
    </changeSet>

    <changeSet author="jhipster" id="20200921130321-2">
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="sso_user_mapping"
                                 constraintName="fk_user_id_company_uen_ntp_referenceid_mapping_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user"/>
    </changeSet>

    <changeSet author="jhipster" id="20200921130321-3">
        <addUniqueConstraint columnNames="reference_id"
                             constraintName="unique_reference_id_per_sso_user"
                             deferrable="false"
                             disabled="false"
                             initiallyDeferred="false"
                             tableName="sso_user_mapping"/>
    </changeSet>
</databaseChangeLog>
