<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity ProcessOrder.
    -->
    <changeSet id="20170217060140-1" author="jhipster">
        <createTable tableName="process_order">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="requirement_number" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="delivery_date" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="quantity" type="${floatType}">
                <constraints nullable="false" />
            </column>

            <column name="special_request" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="created_date" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="modified_date" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="deleted" type="bit">
                <constraints nullable="true" />
            </column>

            <column name="supplier_response" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="buyer_user_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="buyer_business_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="items_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="process_order" columnName="delivery_date" columnDataType="datetime"/>
        <dropDefaultValue tableName="process_order" columnName="created_date" columnDataType="datetime"/>
        <dropDefaultValue tableName="process_order" columnName="modified_date" columnDataType="datetime"/>

    </changeSet>
    <changeSet author="jhipster" id="20170217060140-2">
        <addColumn
            tableName="process_order">
            <column name="process_order_status" type="varchar(255)"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20170217060140-3">
        <addColumn
             tableName="process_order">
             <column name="supplier_feedback" type="varchar(255)"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20170217060140-4">
        <addColumn
            tableName="process_order">
            <column name="weight" type="decimal"/>
        </addColumn>
    </changeSet>
    <changeSet author="EzyProcure" id="20170217060140-5">
        <modifyDataType
            columnName="weight"
            newDataType="float"
            tableName="process_order"/>
    </changeSet>
    <changeSet author="jhipster" id="20170217060140-5">
        <addColumn
            tableName="process_order">
            <column name="gl_code_mappings_id" type="bigint"/>
        </addColumn>
    </changeSet>
 <changeSet author="jhipster" id="20170217060140-6">
        <addColumn
            tableName="process_order">
            <column name="is_promotion_item" type="bit"/>
        </addColumn>
    </changeSet>
    <changeSet author="EzyProcure" id="20170217060140-7">
        <dropColumn
                    columnName="is_promotion_item"
                    tableName="process_order"/>
    </changeSet>
    <changeSet author="EzyProcure" id="20170217060140-8">
        <addColumn
            tableName="process_order">
            <column name="promotion_id" type="bigint"/>
        </addColumn>
    </changeSet>
    <changeSet author="EzyProcure" id="20170217060140-9">
        <renameColumn columnDataType="bigint"
                      newColumnName="is_free_item"
                      oldColumnName="promotion_id"
                      tableName="process_order"/>
    </changeSet>
    <changeSet author="EzyProcure" id="20170217060140-10">
    <modifyDataType
        columnName="is_free_item"
        newDataType="bit"
        tableName="process_order"/>
    </changeSet>
    <changeSet author="EzyProcure" id="20170217060140-11">
        <addColumn
            tableName="process_order">
            <column name="price" type="double"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20170217060140-12">
        <addColumn
            tableName="process_order">
            <column name="item_approval_request_no" type="varchar(255)"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20170217060140-14">
        <addColumn
            tableName="process_order">
            <column name="supplier_id" type="bigint"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20170217060140-15">
        <addNotNullConstraint
                              columnDataType="varchar(255)"
                              columnName="requirement_number"
                              tableName="process_order"/>
        <addNotNullConstraint
            columnDataType="timestamp"
            columnName="delivery_date"
            tableName="process_order"/>
        <addNotNullConstraint
            columnDataType="bit"
            columnName="is_free_item"
            tableName="process_order"/>
        <addNotNullConstraint
            columnDataType="bit"
            columnName="deleted"
            tableName="process_order"/>
        <addNotNullConstraint
            columnDataType="${floatType}"
            columnName="quantity"
            tableName="process_order"/>
        <addNotNullConstraint
            columnDataType="varchar(255)"
            columnName="process_order_status"
            tableName="process_order"/>
        <addNotNullConstraint
            columnDataType="double"
            columnName="price"
            tableName="process_order"/>
    </changeSet>
    <changeSet author="jhipster" id="20170217060140-16">
        <addColumn
            tableName="process_order">
            <column name="picking_list_printed" type="bit" defaultValueComputed="false"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="201905201500-17">
        <addColumn
            tableName="process_order">
            <column name="external_so_no" type="varchar(255)"/>
            <column name="external_so_line_no" type="varchar(255)"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20201028143600-18">
        <addColumn
            tableName="process_order">
            <column name="exported_by" type="varchar(255)">
                <constraints nullable="true" />
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>
