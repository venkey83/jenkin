<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="now()" dbms="mysql"/>
    <property name="autoIncrement" value="true"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity SgebizMailId.
    -->
    <changeSet id="20181026092715-1" author="jhipster">
        <createTable tableName="sgebiz_mail_id">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="mail_id" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="created_date" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="modified_date" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="is_deleted" type="bit">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="sgebiz_mail_id" columnName="created_date" columnDataType="datetime"/>
        <dropDefaultValue tableName="sgebiz_mail_id" columnName="modified_date" columnDataType="datetime"/>

    </changeSet>
    <changeSet id="20181026092715-2" author="jhipster">
        <addDefaultValue columnDataType="bit"
                         columnName="is_deleted"
                         defaultValueBoolean="false"
                         tableName="sgebiz_mail_id"/>
    </changeSet>
    <changeSet id="20181026092715-3" author="jhipster">
        <modifyDataType columnName="is_deleted"
                        newDataType="varchar(255)"
                        tableName="sgebiz_mail_id"/>
    </changeSet>
    <changeSet id="20181026092715-4" author="jhipster">
        <renameColumn columnDataType="varchar(255)"
                      newColumnName="deletion_token"
                      oldColumnName="is_deleted"
                      tableName="sgebiz_mail_id"/>
    </changeSet>
    <changeSet id="20181026092715-5" author="jhipster">
        <addNotNullConstraint columnDataType="varchar(255)"
                              columnName="deletion_token"
                              defaultNullValue="NA"
                              tableName="sgebiz_mail_id"/>
    </changeSet>
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here, do not remove-->
</databaseChangeLog>
