<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity Invoice.
    -->
    <changeSet id="20170330135026-1" author="jhipster">
        <createTable tableName="invoice">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="invoice_number" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="invoice_date" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="invoice_comment" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="delivery_charge" type="decimal(10,2)">
                <constraints nullable="true" />
            </column>

            <column name="discount" type="decimal(10,2)">
                <constraints nullable="true" />
            </column>

            <column name="custom_invoice_number" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="invoice" columnName="invoice_date" columnDataType="datetime"/>

    </changeSet>

    <changeSet author="jhipster" id="20170330135026-2">
        <addColumn
            tableName="invoice">
            <column name="invoice_sub_total" type="decimal(10,2)"/>
        </addColumn>
        <addColumn
            tableName="invoice">
            <column name="invoice_total" type="decimal(10,2)"/>
        </addColumn>
        <addColumn
            tableName="invoice">
            <column name="added_gst" type="decimal(10,2)"/>
        </addColumn>
        <addColumn
            tableName="invoice">
            <column name="grand_total" type="decimal(10,2)"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20170330135026-3">
        <modifyDataType
            columnName="custom_invoice_number"
            newDataType="varchar(255)"
            tableName="invoice"/>
    </changeSet>
    <changeSet author="jhipster" id="20170330135026-4">
    <addColumn
        tableName="invoice">
        <column name="debit_note_status" type="varchar(255)"/>
    </addColumn>
        <addColumn
            tableName="invoice">
            <column name="debit_note_amount" type="decimal(10,2)"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20170330135026-5">
        <modifyDataType
            columnName="grand_total"
            newDataType="decimal(10,3)"
            tableName="invoice"/>
    </changeSet>
    <changeSet author="jhipster" id="20170330135026-6">
        <modifyDataType
            columnName="invoice_total"
            newDataType="decimal(10,3)"
            tableName="invoice"/>
    </changeSet>
    <changeSet author="jhipster" id="20170330135026-7">
        <modifyDataType
            columnName="invoice_sub_total"
            newDataType="decimal(10,3)"
            tableName="invoice"/>
    </changeSet>
    <changeSet author="jhipster" id="20170330135026-8">
        <modifyDataType
            columnName="grand_total"
            newDataType="decimal(10,2)"
            tableName="invoice"/>
    </changeSet>
    <changeSet author="jhipster" id="20170330135026-9">
        <modifyDataType
            columnName="invoice_total"
            newDataType="decimal(10,2)"
            tableName="invoice"/>
    </changeSet>
    <changeSet author="jhipster" id="20170330135026-10">
        <modifyDataType
            columnName="invoice_sub_total"
            newDataType="decimal(10,2)"
            tableName="invoice"/>
    </changeSet>
    <changeSet author="EzyProcure" id="20170330135026-11">
        <renameColumn columnDataType="varchar(255)"
                      newColumnName="hardcopy_invoice_number"
                      oldColumnName="custom_invoice_number"
                      tableName="invoice"/>
    </changeSet>
    <changeSet author="jhipster" id="20170330135026-12">
        <addColumn tableName="invoice">
            <column name="xero_inv_exported" type="bit"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20170330135026-13">
        <addColumn tableName="invoice">
            <column name="payment_status" type="varchar(25)"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20181030235026-14">
        <addColumn
            tableName="invoice">
            <column name="ext_invoice_no" type="varchar(50)"/>
        </addColumn>
         <addColumn
            tableName="invoice">
            <column name="ext_invoice_line_no" type="bigint"/>
        </addColumn>
    </changeSet>

    <changeSet author="jhipster" id="20181030235026-15">
        <addColumn
                tableName="invoice">
            <column name="supplier_invoice_number"
                    type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="201909251557-16">
        <addColumn
            tableName="invoice">
            <column name="type"
                    type="varchar(255)" defaultValue="NA">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="202003251525-17">
        <addColumn
                tableName="invoice">
            <column name="other_charges"
                    type="varchar(255)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>
