<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
    <property name="autoIncrement" value="true"/>
    <!--
        Added the entity Invite.
    -->
    <changeSet id="20200611140800-1" author="jhipster">
        <createTable tableName="invite">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="buyer_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="supplier_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="is_invited_by_buyer" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="is_invite_accepted" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="invited_time_stamp" type="date">
                <constraints nullable="true" />
            </column>
            <column name="accepted_time_stamp" type="date">
                <constraints nullable="true" />
            </column>
            <column name="company_name" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="company_address" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="company_registration_number" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="code" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="username" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="phone" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
    </changeSet>
</databaseChangeLog>
