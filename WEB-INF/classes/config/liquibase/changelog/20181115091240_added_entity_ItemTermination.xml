<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity ItemTermination.
    -->
    <changeSet id="20181115091240-1" author="jhipster">
        <createTable tableName="item_termination">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="from_date" type="timestamp">
                <constraints nullable="true" />
            </column>
            
            <column name="end_date" type="timestamp">
                <constraints nullable="true" />
            </column>
            
            <column name="reason_for_termination" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="created_date" type="timestamp">
                <constraints nullable="true" />
            </column>
            
            <column name="deleted" type="bit">
                <constraints nullable="true" />
            </column>
            
            <column name="items_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="item_business_mapping_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="user_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="item_termination" columnName="from_date" columnDataType="datetime"/>
        <dropDefaultValue tableName="item_termination" columnName="end_date" columnDataType="datetime"/>
        <dropDefaultValue tableName="item_termination" columnName="created_date" columnDataType="datetime"/>
        
    </changeSet>

    <changeSet id="20181115091240-3" author="jhipster">

        <addNotNullConstraint columnName="from_date"
                              columnDataType="timestamp"
                              tableName="item_termination"/>
    </changeSet>
    <changeSet id="20181115091240-4" author="jhipster">

        <addNotNullConstraint columnName="deleted"
                              columnDataType="bit"
                              tableName="item_termination"/>
    </changeSet>
    <changeSet id="20181115091240-5" author="jhipster">

        <addNotNullConstraint columnName="items_id"
                              columnDataType="bigint"
                              tableName="item_termination"/>

        <addNotNullConstraint columnName="item_business_mapping_id"
                              columnDataType="bigint"
                              tableName="item_termination"/>

        <addNotNullConstraint columnName="user_id"
                              columnDataType="bigint"
                              tableName="item_termination"/>

    </changeSet>
    <changeSet id="20181115091240-6" author="jhipster">

        <addNotNullConstraint columnName="created_date"
                              columnDataType="timestamp"
                              tableName="item_termination"/>

        <addNotNullConstraint columnName="end_date"
                              columnDataType="timestamp"
                              tableName="item_termination"/>
    </changeSet>
    <changeSet id="20181115091240-7" author="jhipster">

        <dropNotNullConstraint columnName="end_date"
                              columnDataType="timestamp"
                              tableName="item_termination"/>
    </changeSet>





</databaseChangeLog>
