<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity Buyer.
    -->
    <changeSet id="20161209054047-1" author="jhipster">
        <createTable tableName="buyer">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="buyer_code" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="company_name" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="company_address" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="company_postal_code" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="shipping_address" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="shipping_postal_code" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="phone" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="mobile" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="contact_person_name" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="contact_person_designation" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="company_logo" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="created_date" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="modified_date" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="deleted" type="bit">
                <constraints nullable="false" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="buyer" columnName="created_date" columnDataType="datetime"/>
        <dropDefaultValue tableName="buyer" columnName="modified_date" columnDataType="datetime"/>

    </changeSet>
    <changeSet author="jhipster" id="20161209054047-2">
        <addColumn
            tableName="buyer">
            <column name="suppliers_limit" type="integer"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20161209054047-3">
        <addUniqueConstraint
            columnNames="company_name"
            tableName="buyer"/>
    </changeSet>
    <changeSet author="jhipster" id="20161209054047-4">
        <addColumn
            tableName="buyer">
            <column name="created_by_id" type="bigint"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20161209054047-5">
        <renameColumn columnDataType="bigint"
                      newColumnName="created_user_id"
                      oldColumnName="created_by_id"
                      tableName="buyer"/>
    </changeSet>
    <changeSet author="jhipster" id="20161209054047-6">
        <addColumn
            tableName="buyer">
            <column name="tax" type="varchar(255)"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20161209054047-7">
        <addColumn
            tableName="buyer">
            <column name="gst" type="bigint"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20161209054047-8">
        <addColumn
        tableName="buyer">
        <column name="companyRegistrationNumber" type="varchar(255)"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20161209054047-9">
        <renameColumn columnDataType="varchar(255)"
                      newColumnName="company_registration_number"
                      oldColumnName="companyRegistrationNumber"
                      tableName="buyer"/>
    </changeSet>
    <changeSet author="jhipster" id="20161209054047-10">
        <addColumn
            tableName="buyer">
            <column name="gst_reg_no" type="varchar(255)"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20161209054047-11">
        <dropColumn
            tableName="buyer">
            <column name="gst_reg_no" type="varchar(255)"/>
        </dropColumn>
    </changeSet>
    <changeSet author="jhipster" id="20161209054047-12">
        <modifyDataType
            columnName="gst"
            newDataType="varchar(255)"
            tableName="buyer"/>
    </changeSet>
    <changeSet author="jhipster" id="20161209054047-13">
        <renameColumn columnDataType="varchar(255)"
                      newColumnName="gst_reg_no"
                      oldColumnName="gst"
                      tableName="buyer"/>
    </changeSet>
    <changeSet author="jhipster" id="20161209054047-14">
        <addColumn
            tableName="buyer">
            <column name="company_code" type="varchar(255)"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20161209054047-15">
        <addUniqueConstraint columnNames="company_code"
                             constraintName="unique_constraint_on_company_code"
                             tableName="buyer"/>
    </changeSet>
    <changeSet author="jhipster" id="20161209054047-16">
        <addColumn
            tableName="buyer">
            <column name="multi_level_approval_required" type="bit" defaultValueComputed="false"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20181009160047-17">
        <addColumn tableName="buyer">
            <column name="demo_account" type="bit" defaultValueComputed="false"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20161209054047-18">
        <addColumn
            tableName="buyer">
            <column name="external_company_id" type="varchar(255)"/>
        </addColumn>
    </changeSet>
    <changeSet author="jhipster" id="20200924160500-19">
        <addColumn
            tableName="buyer">
            <column name="gr_qty_buffer" type="double" defaultValueNumeric="0"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>
