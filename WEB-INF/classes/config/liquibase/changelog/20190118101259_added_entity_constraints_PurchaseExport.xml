    <!--
        Added the constraints for entity PurchaseExport.
    -->
    <changeSet id="20190118101259-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="exported_by_id"
                                 baseTableName="purchase_export"
                                 constraintName="fk_purchase_export_exported_by_id"
